rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // 검색 결과 저장
    match /search_results/{resultId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // 메모 저장
    match /memos/{userId}/user_memos/{memoId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 사용자 한도
    match /users/{userId}/limits/{date} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 채용공고 관리
    match /jobs/{jobId} {
      // 모든 사용자가 읽기 가능 (공개 채용공고)
      allow read: if true;
      // 로그인한 사용자만 생성 가능
     allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
     allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // 이력서 관리
    match /resumes/{userId} {
      // 본인만 읽기/쓰기 가능
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 지원서 관리
    match /applications/{applicationId} {
      // 지원자 본인 또는 해당 채용공고 작성자만 읽기 가능
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.userId ||
                      (exists(/databases/$(database)/documents/jobs/$(resource.data.jobId)) &&
                       request.auth.uid == get(/databases/$(database)/documents/jobs/$(resource.data.jobId)).data.userId));
      
      // 지원자만 생성 가능
      allow create: if request.auth != null &&
                       request.auth.uid == request.resource.data.userId;
      
      // 채용공고 작성자만 상태 수정 가능 (지원자는 수정 불가)
      allow update: if request.auth != null &&
                       (exists(/databases/$(database)/documents/jobs/$(resource.data.jobId)) &&
                        request.auth.uid == get(/databases/$(database)/documents/jobs/$(resource.data.jobId)).data.userId);
      
      // 삭제는 지원자 본인만 가능
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // 사용자 프로필
    match /users/{userId} {
      // 본인만 읽기/쓰기 가능
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 사용자별 개인 데이터 (메모, 일기 등)
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 공개 데이터 (인사말 응답 등)
    match /greetingResponses/{date} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 건강 기록
    match /health_records/{recordId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // match /{document=**} {
    //   // 임시 규칙 (개발용) - 프로덕션 배포 시 반드시 제거해야 합니다.
    //   allow read, write: if request.time < timestamp.date(2025, 11, 29);
    // }
  }
}
